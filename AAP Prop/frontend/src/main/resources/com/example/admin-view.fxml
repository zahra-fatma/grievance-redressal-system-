<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.AdminController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #22223b;">

    <children>
        <VBox alignment="CENTER" spacing="25"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <Label text="Admin Control Panel"
                   style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #f2e9e4;" />

            <Button text="Manage Users"
                    style="-fx-font-size: 18px; -fx-background-color: #9a8c98; -fx-text-fill: #f2e9e4;" />

            <Button text="System Logs"
                    style="-fx-font-size: 18px; -fx-background-color: #c9ada7; -fx-text-fill: #22223b;" />

            <Button text="Settings"
                    style="-fx-font-size: 18px; -fx-background-color: #4a4e69; -fx-text-fill: white;" />

        </VBox>
    </children>
</AnchorPane>